<h1>Create a Home</h1>

<%= simple_form_for [@user, @home] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :address %>
  </div>

  <%# <div class="form-inputs">
    <%= f.input :users, as: :check_boxes, collection: @users_collection, input_html: { multiple: true }, include_hidden: false %>
  <%# </div> %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
