<div class="my-expenses" style="padding-top: 80px">
  <h4 class="text-center expenses-title"><%= @user.first_name %>'s expense lists</h1>

<div class="expenses-links">
  <%= render "expenses/toggle_all_expenses" %>
  <%# <div class="links btn-expenses">
    <%= link_to 'All expenses', home_expenses_path(current_user.home) %>
  <%# </div> %>

  <%= link_to new_home_expense_path(current_user.home), class:"action-button" do %>
  <i class="fas fa-plus fa-2x "></i>
  <% end %>
</div>

<% current_user.expense_shares.each do |share| %>
  <div class="card expenses-card" style="width: auto;">
    <div class="expenses-card-content">
      <h4><%= link_to share.expense.name, home_expense_path(@home, share.expense), class:"text-center" %></h4>
    </div>
    <div class="card-footer expenses-card-footer">
      <ul>
        <li>Amount: <span class="color-tone-up">$ <%= share.share_amount.round %></span></li>
        <li>Due on: <span class="color-tone-up"><%= share.expense.due_on.strftime('%d %b') %></span></li>
        <li>Description: <%= share.expense.description %></li>
      </ul>
      <div>
        <i class="btn-mark"><%= render "expenses/switch", expense: share %></i>
      </div>
    </div>
  </div>
<% end %>




