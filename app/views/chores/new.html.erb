<h1>Create new chore</h1>

<div>
  <%= simple_form_for [@home, @chore] do |f|%>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :asignee, as: :check_boxes, collection: @home.users, input_html: { multiple: true }, include_hidden: false %>
    <%= f.button :submit, value: 'Add chore', class: 'btn btn-primary' %>
  <% end %>
</div>

<div class="links">
  <%= link_to 'cancel', dashboard_path %>
</div>
