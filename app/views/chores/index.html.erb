<h1>All chores</h1>

<% @chores.each do |chore|
  <div class="card" style="width: 18rem;">
    <table>
      <tbody>
          <tr><th>Chores:</th><td><%= link_to chore.name, home_expense_expense_share_path(expense), class:"text-center" %></td></tr>
          <tr><th>$ </th><td><%= expense.amount %></td><td>to pay</td></tr>
          <tr><th>Due on:</th><td><%= expense.due_on %></td></tr>
          <tr>
          <% if @expense_share.paid %>
            <th><%= "Paid" %></th>
          <% else %>
            <th><%= "Unpaid" %></th>
          <% end %>
          </tr>
      </tbody>
    </table>
  </div>
<% end %>

<div class="links">
  <%= link_to 'Creare new bill', new_home_expense_path %>
</div> %>
