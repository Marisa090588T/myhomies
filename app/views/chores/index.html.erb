<h1>All chores</h1>

<% @chores.each do |chore| %>
  <div class="card bg-dark" style="width: 18rem;">
    <table>
      <tbody>
          <tr><th>Chores:</th><td><%= link_to chore.name, home_chore_path(@home, @chore), class:"text-center" %></td></td></tr>
          <tr><th>Description:</th><td><%= chore.description %></td></tr>
          <tr><th>Assigned to:</th><td><%= chore.assignee %></td></tr>

          <tr>
          <%= render "switch", chore: chore %>
          </tr>
      </tbody>
    </table>
  </div>
<% end %>

<div class="links">
  <%= link_to 'Creare new chore', new_home_chore_path %>
</div>
