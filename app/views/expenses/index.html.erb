<div class="all-expenses container">
  <h1 class="text-center"><%= @home.name %>'s<br> expense list</h1>

  <div class="expenses-links">
    <div class="links btn-expenses">
      <%= link_to 'My Expenses', user_expenses_path %>
  </div>

   <%= link_to new_home_expense_path(current_user.home), class:"action-button" do %>
   <i class="fas fa-plus fa-2x "></i>
   <% end %>



  <% @expenses.each do |expense| %>
    <div class="card bg-dark expenses-card" style="width: 30rem;">
      <ul>
        <li>Expense: <%= link_to expense.name, home_expense_path(@home, expense), class:"text-center" %></li>
        <li>Amount <strong class="amount">$ <%= expense.amount.round %></strong></li>
        <li>Due on: <%= expense.due_on %></li>
      </ul>
      <% if expense.paid %>
        <div><i class="far fa-check-circle fa-2x mark-done"></i></div>
      <% else %>
        <div><i class="far fa-check-circle fa-2x mark-yet"></i></div>
      <% end %>
    </div>
  <% end %>

</div>

