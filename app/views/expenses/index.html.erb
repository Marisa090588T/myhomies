<div class="all-expenses container">
  <h1 class="text-center"><%= @home.name %>'s<br> bills list</h1>

  <div class="expenses-links">
    <div class="links btn-expenses">
      <%= link_to 'My Bills', user_expenses_path %>
  </div>

  <div class="links btn-add-expenses">
    <%= link_to new_home_expense_path(current_user.home) do %>
    <i class="fas fa-plus fa-2x "></i>
    <% end %>
  </div>

  <% @expenses.each do |expense| %>
    <div class="card bg-dark expenses-card" style="width: 30rem;">
      <% if @expense_share.paid %>
        <div class="swal2-icon swal2-success swal2-animate-success-icon style="display: flex;">
          <span class="swal2-success-line-tip"></span>
          <span class="swal2-success-line-long"></span>
          <div class="swal2-success-ring"></div> 
        </div>
      <% else %>
        <div class="swal2-icon swal2-error swal2-animate-error-icon" style="display: flex;"><span class="swal2-x-mark"><span class="swal2-x-mark-line-left"></span><span class="swal2-x-mark-line-right"></span></span></div>
      <% end %>
      <ul>
        <li>Bill: <%= link_to expense.name, home_expense_path(@home, expense), class:"text-center" %></li>
        <li>Amount <strong class="amount">$ <%= expense.amount.round %></strong></li>
        <li>Due on: <%= expense.due_on %></li>
      </ul>
    </div>
  <% end %>
</div>